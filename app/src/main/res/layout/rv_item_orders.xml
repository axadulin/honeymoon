<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:card_view="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="120dp"
android:layout_margin="10dp"

app:cardElevation="8dp"
card_view:cardCornerRadius="18dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/lightBack"
    android:paddingLeft="@dimen/rv_padding10"
    >

    <TextView
        android:id="@+id/txtPaymentClient"
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/client"
        android:drawablePadding="10dp"
        android:padding="6dp"
        android:text="Mijoz 1"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtPaymentSumma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPaymentClient"

        android:layout_marginLeft="4dp"
        android:drawableLeft="@drawable/phone2"
        android:drawablePadding="10dp"
        android:padding="6dp"
        android:text="12 700 000 so'm" />

    <TextView
        android:id="@+id/txtPaymentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="@dimen/rv_padding20"
        android:drawablePadding="10dp"
        android:fontFamily="@font/montserrat_medium"
        android:padding="6dp"
        android:text="20.06.2021"
        android:textColor="@color/black"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/txtPaymentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtPaymentDate"
        android:layout_marginRight="@dimen/rv_padding20"
        android:drawablePadding="10dp"
        android:fontFamily="@font/montserrat_medium"
        android:padding="6dp"
        android:text="20.06.2021"
        android:textColor="@color/black"
        android:textSize="18sp" />


</RelativeLayout>
</androidx.cardview.widget.CardView>